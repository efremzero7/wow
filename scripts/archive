#!/usr/bin/env bash

set -euo pipefail

if test -z "$*"; then
    echo "Missing argument, e.g. $0 classic/Fastbind/1.0.0" >&2
    exit 1
fi

if ! git rev-parse "$1" >/dev/null 2>&1; then
    echo "$1 is not an existing tag" >&2
    exit 1
fi

platform="$(echo "$1" | cut -f1 -d/)"
name="$(echo "$1" | cut -f2 -d/)"
version="$(echo "$1" | cut -f3 -d/)"
archive="$name-$version-$platform.zip"

export RELEASE="$name $version ($platform)"

mkdir -p dist
git archive --format=zip -o "dist/$archive" --prefix="$name/" "$1:$platform/$name/"