<Ui xmlns="http://www.blizzard.com/wow/ui/" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">
    <Script file="Data.lua"/>
    <Script file="API.lua"/>
    <Script file="Threatrack.lua"/>

    <Frame name="ThreatrackPortraitTemplate" enableMouse="true" virtual="true" mixin="ThreatrackPortrait">
        <Size x="64" y="64"/>
        <Layers>
            <Layer level="BACKGROUND">
                <!-- <Texture file="Interface/Common/Portrait-Ring-WithBg">
                    <Size x="92" y="92"/>
                    <Anchors>
                        <Anchor point="CENTER"/>
                    </Anchors>
                    <TexCoords left="0.1875" right="0.8125" top="0.1875" bottom="0.8125"/>
                </Texture> -->
            </Layer>
            <Layer level="BORDER">
                <!-- <Texture parentKey="Race" file="Interface/Glues/CharacterCreate/UI-CharacterCreate-RacesRound" setAllPoints="true"/> -->
                <Texture parentKey="Class" file="Interface/TargetingFrame/UI-Classes-Circles" setAllPoints="true"/>
            </Layer>
            <Layer level="ARTWORK">
                <Texture file="Interface/Common/Portrait-Ring-WithBg">
                    <Size x="32" y="32"/>
                    <Anchors>
                        <Anchor point="BOTTOMRIGHT" x="4" y="-4"/>
                    </Anchors>
                    <TexCoords left="0.1875" right="0.8125" top="0.1875" bottom="0.8125"/>
                </Texture>
                <FontString parentKey="Level" inherits="GameNormalNumberFont" justifyH="CENTER" justifyV="MIDDLE">
                    <Size x="24" y="24"/>
                    <Anchors>
                        <Anchor point="BOTTOMRIGHT"/>
                    </Anchors>
                </FontString>
            </Layer>
            <Layer level="OVERLAY">
                <Texture parentKey="Skull" file="Interface\TargetingFrame\UI-TargetingFrame-Skull">
                    <Size x="16" y="16"/>
                    <Anchors>
                        <Anchor point="BOTTOMRIGHT" x="-4" y="4"/>
                    </Anchors>
                </Texture>
                <Texture setAllPoints="true">
                    <!-- <Color r="1.0" g="0.0" b="1.0" a="0.2"/> -->
                </Texture>
            </Layer>
            <Layer level="HIGHLIGHT">
                <!-- <Texture file="Interface/Common/Portrait-Ring-WithBg-Highlight" setAllPoints="true">
                    <TexCoords left="0.2890625" right="0.6953125" top="0.296875" bottom="0.6953125"/>
                    <Color r="1.0" g="1.0" b="1.0" a="0.5"/>
                </Texture> -->
            </Layer>
        </Layers>
        <Scripts>
            <OnUpdate method="OnUpdate"/>
        </Scripts>
    </Frame>

    <Frame mixin="Threatrack" toplevel="true" parent="UIParent">
        <Size y="64"/>
        <Anchors>
            <Anchor point="TOP" y="-32"/>
        </Anchors>
        <Frames>
            <Frame parentArray="portraits" hidden="true" inherits="ThreatrackPortraitTemplate"/>
            <Frame parentArray="portraits" hidden="true" inherits="ThreatrackPortraitTemplate"/>
            <Frame parentArray="portraits" hidden="true" inherits="ThreatrackPortraitTemplate"/>
            <Frame parentArray="portraits" hidden="true" inherits="ThreatrackPortraitTemplate"/>
            <Frame parentArray="portraits" hidden="true" inherits="ThreatrackPortraitTemplate"/>
            <Frame parentArray="portraits" hidden="true" inherits="ThreatrackPortraitTemplate"/>
            <Frame parentArray="portraits" hidden="true" inherits="ThreatrackPortraitTemplate"/>
            <Frame parentArray="portraits" hidden="true" inherits="ThreatrackPortraitTemplate"/>
            <Frame parentArray="portraits" hidden="true" inherits="ThreatrackPortraitTemplate"/>
            <Frame parentArray="portraits" hidden="true" inherits="ThreatrackPortraitTemplate"/>
        </Frames>
        <Scripts>
            <OnLoad method="OnLoad"/>
        </Scripts>
    </Frame>
</Ui>
