<Ui xmlns="http://www.blizzard.com/wow/ui/" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">
    <Script file="API.lua"/>
    <Script file="Threatrack.lua"/>

    <Frame name="ThreatrackPortraitTemplate" enableMouse="true" virtual="true" mixin="ThreatrackPortrait">
        <Size x="64" y="64"/>
        <Layers>
            <Layer level="BACKGROUND">
                <Texture parentKey="Class" file="Interface/TargetingFrame/UI-Classes-Circles">
                    <TexCoords left="0" right="0.125" top="0" bottom="0.25"/>
                </Texture>
            </Layer>
            <Layer level="BORDER">
                <Texture parentKey="Race" file="Interface/Glues/CharacterCreate/UI-CharacterCreate-RacesRound" setAllPoints="true">
                    <Size x="32" y="32"/>
                    <Anchors>
                        <Anchor point="TOPRIGHT" x="4"/>
                    </Anchors>
                    <TexCoords left="0" right="0.25" top="0" bottom="0.25"/>
                </Texture>
                <Texture file="Interface/UnitPowerBarAlt/Generic1Player_Circular_Fill" alphaMode="BLEND">
                    <Size x="24" y="24"/>
                    <Anchors>
                        <Anchor point="BOTTOMRIGHT" x="0"/>
                    </Anchors>
                    <Color r="0.0" g="0.0" b="0.0" a="0.75"/>
                    <TexCoords left="0.23" right="0.77" top="0.23" bottom="0.77"/>
                </Texture>
            </Layer>
            <Layer level="ARTWORK">
                <!-- <Texture file="Interface/UnitPowerBarAlt/Generic1Target_Circular_Frame">
					<Size x="32" y="32"/>
					<Anchors>
						<Anchor point="BOTTOMRIGHT" x="8"/>
					</Anchors>
				</Texture> -->
                <FontString parentKey="Level" inherits="GameNormalNumberFont" justifyH="CENTER" justifyV="CENTER">
                    <Size x="24" y="24"/>
                    <Anchors>
                        <Anchor point="BOTTOMRIGHT" x="0"/>
                    </Anchors>
                </FontString>
            </Layer>
            <Layer level="OVERLAY">
                <Texture setAllPoints="true">
                    <!-- <Color r="1.0" g="0.0" b="0.5" a="0.125"/> -->
                </Texture>
            </Layer>
        </Layers>
        <Scripts>
            <OnLoad method="OnLoad"/>
            <OnUpdate method="OnUpdate"/>
        </Scripts>
    </Frame>

    <Frame mixin="Threatrack" toplevel="true" parent="UIParent">
        <Size y="64"/>
        <Anchors>
            <Anchor point="TOP" y="-25"/>
        </Anchors>
        <Frames>
            <Frame parentArray="portraits" inherits="ThreatrackPortraitTemplate" />
            <Frame parentArray="portraits" inherits="ThreatrackPortraitTemplate" />
            <Frame parentArray="portraits" inherits="ThreatrackPortraitTemplate" />
            <Frame parentArray="portraits" inherits="ThreatrackPortraitTemplate" />
            <Frame parentArray="portraits" inherits="ThreatrackPortraitTemplate" />
            <Frame parentArray="portraits" inherits="ThreatrackPortraitTemplate" />
            <Frame parentArray="portraits" inherits="ThreatrackPortraitTemplate" />
            <Frame parentArray="portraits" inherits="ThreatrackPortraitTemplate" />
            <Frame parentArray="portraits" inherits="ThreatrackPortraitTemplate" />
            <Frame parentArray="portraits" inherits="ThreatrackPortraitTemplate" />
        </Frames>
        <Scripts>
            <OnLoad method="OnLoad"/>
        </Scripts>
    </Frame>
</Ui>
