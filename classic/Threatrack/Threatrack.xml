<Ui xmlns="http://www.blizzard.com/wow/ui/" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">
	<Script file="Data.lua"/>
	<Script file="API.lua"/>
	<Script file="Threatrack.lua"/>

	<Font name="ThreatrackLevelFont" inherits="Game12Font_o1" virtual="true">
		<Shadow>
			<Color r="0" g="0" b="0" a="1"/>
			<Offset>
				<AbsDimension x="0" y="0" />
			</Offset>
		</Shadow>
	</Font>

	<Frame name="ThreatrackPortraitTemplate" mixin="ThreatrackPortrait" enableMouse="true" virtual="true">
		<Size x="64" y="64"/>
		<Layers>
			<!-- <Layer level="BACKGROUND">
                <Texture file="Interface/Common/Portrait-Ring-WithBg">
                    <Size x="92" y="92"/>
                    <Anchors>
                        <Anchor point="CENTER"/>
                    </Anchors>
                    <TexCoords left="0.1875" right="0.8125" top="0.1875" bottom="0.8125"/>
                </Texture>
            </Layer> -->
			<Layer level="BORDER">
				<!-- <Texture parentKey="Race" file="Interface/Glues/CharacterCreate/UI-CharacterCreate-RacesRound" setAllPoints="true"/> -->
				<Texture parentKey="Class" file="Interface/TargetingFrame/UI-Classes-Circles" setAllPoints="true"/>
			</Layer>
			<Layer level="ARTWORK">
				<Texture name="$parentRing" file="Interface/Common/Portrait-Ring-WithBg">
					<Size x="58" y="58"/>
					<Anchors>
						<Anchor point="BOTTOMRIGHT" x="16" y="-16"/>
					</Anchors>
				</Texture>
				<FontString parentKey="Level" inherits="ThreatrackLevelFont" justifyH="CENTER" justifyV="MIDDLE">
					<Anchors>
						<Anchor point="CENTER" relativeTo="$parentRing"/>
					</Anchors>
				</FontString>
			</Layer>
			<Layer level="OVERLAY">
				<Texture parentKey="Skull" file="Interface\TargetingFrame\UI-TargetingFrame-Skull">
					<Size x="18" y="18"/>
					<Anchors>
						<Anchor point="CENTER" relativeTo="$parentRing"/>
					</Anchors>
				</Texture>
				<Texture setAllPoints="true">
					<!-- <Color r="1.0" g="0.0" b="1.0" a="0.2"/> -->
				</Texture>
			</Layer>
			<!-- <Layer level="HIGHLIGHT">
                <Texture file="Interface/Common/Portrait-Ring-WithBg-Highlight" setAllPoints="true">
                    <TexCoords left="0.2890625" right="0.6953125" top="0.296875" bottom="0.6953125"/>
                    <Color r="1.0" g="1.0" b="1.0" a="0.5"/>
                </Texture>
            </Layer> -->
		</Layers>
		<Scripts>
			<OnEnter method="OnEnter"/>
			<OnLeave method="OnLeave"/>
			<OnUpdate method="OnUpdate"/>
		</Scripts>
	</Frame>

	<Frame name="ThreatrackFrame" mixin="Threatrack" toplevel="true" parent="UIParent">
		<Size y="64"/>
		<Anchors>
			<Anchor point="TOP" y="-8"/>
		</Anchors>
		<Frames>
			<Frame name="$parentPortrait1" parentArray="portraits" inherits="ThreatrackPortraitTemplate" hidden="true"/>
			<Frame name="$parentPortrait2" parentArray="portraits" inherits="ThreatrackPortraitTemplate" hidden="true"/>
			<Frame name="$parentPortrait3" parentArray="portraits" inherits="ThreatrackPortraitTemplate" hidden="true"/>
			<Frame name="$parentPortrait4" parentArray="portraits" inherits="ThreatrackPortraitTemplate" hidden="true"/>
			<Frame name="$parentPortrait5" parentArray="portraits" inherits="ThreatrackPortraitTemplate" hidden="true"/>
			<Frame name="$parentPortrait6" parentArray="portraits" inherits="ThreatrackPortraitTemplate" hidden="true"/>
			<Frame name="$parentPortrait7" parentArray="portraits" inherits="ThreatrackPortraitTemplate" hidden="true"/>
			<Frame name="$parentPortrait8" parentArray="portraits" inherits="ThreatrackPortraitTemplate" hidden="true"/>
			<Frame name="$parentPortrait9" parentArray="portraits" inherits="ThreatrackPortraitTemplate" hidden="true"/>
		</Frames>
		<Scripts>
			<OnLoad method="OnLoad"/>
			<OnEvent method="OnEvent"/>
		</Scripts>
	</Frame>
</Ui>
